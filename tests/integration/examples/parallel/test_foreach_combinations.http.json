{
    "stages": [
        {
            "name": "foreach_combinations",
            "description": "Search with different category/sort combinations",
            "fixtures": ["server"],
            "parallel": {
                "foreach": [
                    {
                        "combinations": [
                            {"category": "electronics", "sort": "price"},
                            {"category": "books", "sort": "name"},
                            {"category": "clothing", "sort": "rating"}
                        ]
                    }
                ]
            },
            "request": {
                "url": "{{ server }}/search",
                "params": {
                    "category": "{{ category }}",
                    "sort": "{{ sort }}"
                }
            },
            "response": [
                {
                    "verify": {
                        "status": 200
                    }
                },
                {
                    "save": {
                        "jmespath": {
                            "response_category": "category",
                            "response_sort": "sort"
                        }
                    }
                },
                {
                    "verify": {
                        "expressions": [
                            "{{ response_category == category }}",
                            "{{ response_sort == sort }}"
                        ]
                    }
                }
            ]
        }
    ]
}
