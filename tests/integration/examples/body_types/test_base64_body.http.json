{
    "stages": [
        {
            "name": "base64_body",
            "description": "Test base64-encoded binary data",
            "fixtures": ["server"],
            "request": {
                "method": "POST",
                "url": "{{ server }}/echo/binary",
                "body": {
                    "base64": "SGVsbG8gV29ybGQh"
                }
            },
            "response": [
                {
                    "verify": {
                        "status": 200
                    }
                },
                {
                    "save": {
                        "jmespath": {
                            "received_base64": "base64",
                            "received_size": "size"
                        }
                    }
                },
                {
                    "verify": {
                        "expressions": [
                            "{{ received_base64 == 'SGVsbG8gV29ybGQh' }}",
                            "{{ received_size == 12 }}"
                        ]
                    }
                }
            ]
        }
    ]
}
