{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "id": {
            "type": "integer",
            "minimum": 1
        },
        "name": {
            "type": "string",
            "minLength": 1
        },
        "email": {
            "type": "string",
            "format": "email"
        },
        "status": {
            "type": "string",
            "enum": ["active", "inactive", "pending"]
        },
        "created_at": {
            "type": "string",
            "format": "date-time"
        }
    },
    "required": ["id", "name"],
    "additionalProperties": false
}
