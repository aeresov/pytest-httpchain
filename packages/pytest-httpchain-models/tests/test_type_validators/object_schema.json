{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "id": {
            "type": "integer",
            "minimum": 1
        },
        "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
        },
        "email": {
            "type": "string",
            "format": "email"
        },
        "roles": {
            "type": "array",
            "items": {
                "type": "string",
                "enum": ["admin", "user", "guest"]
            },
            "uniqueItems": true
        },
        "metadata": {
            "type": "object",
            "additionalProperties": true
        }
    },
    "required": ["id", "name", "email"],
    "additionalProperties": false
}
